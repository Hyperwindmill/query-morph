{
  "name": "@morphql/playground",
  "version": "0.1.8",
  "description": "Interactive playground for morphql - Test MorphQL queries in real-time.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "author": "Hyperwindmill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hyperwindmill/morphql.git",
    "directory": "packages/playground"
  },
  "bugs": {
    "url": "https://github.com/Hyperwindmill/morphql/issues"
  },
  "homepage": "https://github.com/Hyperwindmill/morphql/tree/main/packages/playground#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./playground.css": "./dist/playground.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:app",
    "build:lib": "vite build --config vite.config.lib.ts && tsc -p tsconfig.lib.json",
    "build:app": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "@morphql/core": "*",
    "@morphql/language-definitions": "*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/postcss": "^4.1.18",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
