{
  "name": "mql-vscode",
  "displayName": "MQL (Morph Query Language)",
  "description": "Syntax highlighting, diagnostics, hover documentation, and execution for Morph Query Language",
  "version": "0.1.0",
  "publisher": "query-morph",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "mql",
    "morph",
    "query",
    "transformation",
    "json",
    "xml",
    "data transformation",
    "query language"
  ],
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mql",
        "aliases": [
          "MQL",
          "Morph Query Language"
        ],
        "extensions": [
          ".mql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mql",
        "scopeName": "source.mql",
        "path": "./syntaxes/mql.tmLanguage.json"
      },
      {
        "scopeName": "mql.injection",
        "path": "./syntaxes/mql.injection.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ]
      }
    ],
    "snippets": [
      {
        "language": "mql",
        "path": "./snippets/mql.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/mql-embedded.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/mql-embedded.json"
      }
    ],
    "commands": [
      {
        "command": "mql.executeWithInput",
        "title": "MQL: Execute with Input Data",
        "icon": "$(play)"
      },
      {
        "command": "mql.executeFromClipboard",
        "title": "MQL: Execute with Clipboard Data"
      },
      {
        "command": "mql.executeSelection",
        "title": "MQL: Execute Selection"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == mql",
          "command": "mql.executeWithInput",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == mql",
          "command": "mql.executeWithInput",
          "group": "mql@1"
        },
        {
          "when": "resourceLangId == mql",
          "command": "mql.executeFromClipboard",
          "group": "mql@2"
        },
        {
          "when": "editorHasSelection && (resourceLangId == typescript || resourceLangId == javascript || resourceLangId == typescriptreact || resourceLangId == javascriptreact)",
          "command": "mql.executeSelection",
          "group": "mql@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "rollup -c",
    "compile": "rollup -c",
    "watch": "rollup -c -w",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "@query-morph/core": "file:../core",
    "@query-morph/language-definitions": "file:../language-definitions"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "rollup": "^4.55.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/query-morph.git"
  },
  "license": "MIT"
}
