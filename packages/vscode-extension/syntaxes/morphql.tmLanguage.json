{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MorphQL",
  "scopeName": "source.morphql",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#quoted-identifiers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.morphql",
          "match": "\\b(from|to|transform|unsafe|if|else)\\b"
        },
        {
          "name": "keyword.other.morphql",
          "match": "\\b(set|section|multiple|clone|delete|define|modify|return)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.morphql",
          "match": "//.*$"
        },
        {
          "name": "comment.block.morphql",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.morphql",
          "match": "\\b(substring|split|replace|text|number|uppercase|lowercase|extractnumber|xmlnode|to_base64|from_base64|aslist|spreadsheet)(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.morphql",
          "match": "(===|!==|==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.morphql",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.morphql",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.morphql",
          "match": "="
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.morphql",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.morphql",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.morphql",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.morphql",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.morphql",
          "match": "-?\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.morphql",
          "match": "[a-zA-Z_$][a-zA-Z0-9_$]*(?:\\.[a-zA-Z_$][a-zA-Z0-9_$]*)*(?:\\[\\d+\\]|\\[[a-zA-Z_$][a-zA-Z0-9_$]*\\])*"
        }
      ]
    },
    "quoted-identifiers": {
      "patterns": [
        {
          "comment": "JS-escaped quoted identifier (for embedded MorphQL)",
          "name": "variable.other.quoted.morphql",
          "begin": "(\\\\)`",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.variable.escape.morphql"
            }
          },
          "end": "(?<!\\\\)\\1`",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.variable.escape.morphql"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.morphql",
              "match": "\\\\."
            }
          ]
        },
        {
          "comment": "Standard quoted identifier (for raw MorphQL files)",
          "name": "variable.other.quoted.morphql",
          "begin": "`",
          "end": "(?<!\\\\)`",
          "patterns": [
            {
              "name": "constant.character.escape.morphql",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
