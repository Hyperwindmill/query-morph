{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "mql.injection",
  "injectionSelector": "L:source.ts -comment -string, L:source.js -comment -string, L:source.tsx -comment -string, L:source.jsx -comment -string",
  "patterns": [
    {
      "comment": "MQL in tagged template strings with mql tag",
      "name": "meta.embedded.block.mql",
      "begin": "(mql)\\s*(`)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.tagged-template.mql"
        },
        "2": {
          "name": "punctuation.definition.string.template.begin.ts"
        }
      },
      "end": "(?<!\\\\)`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.ts"
        }
      },
      "patterns": [
        {
          "include": "source.mql"
        }
      ]
    },
    {
      "comment": "MQL in template strings after // @mql comment",
      "name": "meta.embedded.block.mql",
      "begin": "(?<=//\\s*@mql\\s*\\n)\\s*(?:const|let|var)\\s+\\w+\\s*=\\s*(`)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.string.template.begin.ts"
        }
      },
      "end": "(?<!\\\\)`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.ts"
        }
      },
      "patterns": [
        {
          "include": "source.mql"
        }
      ]
    }
  ]
}
