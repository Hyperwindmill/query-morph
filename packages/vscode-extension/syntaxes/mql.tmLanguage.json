{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MQL",
  "scopeName": "source.mql",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#identifiers" },
    { "include": "#quoted-identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mql",
          "match": "\\b(from|to|transform|if|else)\\b"
        },
        {
          "name": "keyword.other.mql",
          "match": "\\b(set|section|multiple|clone|delete|define)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mql",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mql",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.mql",
          "match": "\\b(substring|split|replace|text|number|uppercase|lowercase|xmlnode|extractnumber|if)(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.mql",
          "match": "(===|!==|==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.mql",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.mql",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.mql",
          "match": "="
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mql",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mql",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mql",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mql",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.mql",
          "match": "-?\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.mql",
          "match": "[a-zA-Z_$][a-zA-Z0-9_$]*(?:\\.[a-zA-Z_$][a-zA-Z0-9_$]*)*(?:\\[\\d+\\]|\\[[a-zA-Z_$][a-zA-Z0-9_$]*\\])*"
        }
      ]
    },
    "quoted-identifiers": {
      "patterns": [
        {
          "comment": "JS-escaped quoted identifier (for embedded MQL)",
          "name": "variable.other.quoted.mql",
          "begin": "(\\\\)`",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.variable.escape.mql" }
          },
          "end": "(?<!\\\\)\\1`",
          "endCaptures": {
            "1": { "name": "punctuation.definition.variable.escape.mql" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.mql",
              "match": "\\\\."
            }
          ]
        },
        {
          "comment": "Standard quoted identifier (for raw MQL files)",
          "name": "variable.other.quoted.mql",
          "begin": "`",
          "end": "(?<!\\\\)`",
          "patterns": [
            {
              "name": "constant.character.escape.mql",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
