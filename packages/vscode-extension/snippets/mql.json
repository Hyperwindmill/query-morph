{
  "Basic Transformation": {
    "prefix": "mql-transform",
    "body": [
      "from ${1|json,xml,object|} to ${2|json,xml,object|}",
      "transform",
      "  set ${3:field} = ${4:value}",
      "  $0"
    ],
    "description": "Basic MQL transformation template"
  },
  "Section": {
    "prefix": "mql-section",
    "body": [
      "section ${1:name}(",
      "  ${2:set field = value}",
      ") ${3:from path}",
      "$0"
    ],
    "description": "MQL section block"
  },
  "Section Multiple": {
    "prefix": "mql-section-multiple",
    "body": [
      "section multiple ${1:items}(",
      "  ${2:set field = value}",
      ") from ${3:sourcePath}",
      "$0"
    ],
    "description": "MQL section with multiple items (array mapping)"
  },
  "If Expression": {
    "prefix": "mql-if-expr",
    "body": [
      "if(${1:condition}, ${2:trueValue}, ${3:falseValue})"
    ],
    "description": "MQL if expression (ternary)"
  },
  "If Statement": {
    "prefix": "mql-if-stmt",
    "body": [
      "if (${1:condition}) (",
      "  ${2:set field = value}",
      ") else (",
      "  ${3:set field = otherValue}",
      ")",
      "$0"
    ],
    "description": "MQL if/else statement block"
  },
  "Clone": {
    "prefix": "mql-clone",
    "body": [
      "clone(${1:field1, field2})"
    ],
    "description": "Clone fields from source"
  },
  "Define": {
    "prefix": "mql-define",
    "body": [
      "define ${1:alias} = ${2:expression}",
      "$0"
    ],
    "description": "Define a local variable"
  },
  "Substring": {
    "prefix": "mql-substring",
    "body": [
      "substring(${1:string}, ${2:start}, ${3:length})"
    ],
    "description": "Extract substring"
  },
  "Split": {
    "prefix": "mql-split",
    "body": [
      "split(${1:string}, ${2:separator})"
    ],
    "description": "Split string into array"
  }
}
